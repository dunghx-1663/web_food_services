<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th class="col-md-2 col-lg-3"><%= t "dashboard.customer" %></th>
      <th class="col-md-2 col-lg-3"><%= t "dashboard.address" %></th>
      <th class="col-md-1 col-lg-2"><%= t "dashboard.total_money" %></th>
      
      <th class="col-md-1 col-lg-2"><%= t "dashboard.status" %></th>
      <th class="col-md-2 col-lg-2"><%= t "dashboard.shipper" %></th>
      <th class="col-md-2 col-lg-1"><%= t "dashboard.created_at" %></th>
    
      <th class="col-md-2 col-lg-2"><%= t "dashboard.updated_at" %></th>
    </tr>
  </thead>
  <tbody>
    <% if @top_orders.any? %>
      <% @top_orders.each do |top_order| %>
        <tr>
          <td>
            <%= top_order.customer_name if top_order.customer_id.present? %>
          </td>
          <td>
            <%= top_order.address if top_order.address.present? %>
          </td>
          <td>
            <%= top_order.total_money if top_order.total_money.present? %>
          </td>
          <td>
            <%= top_order.status == 1 ? 'new' :top_order.status == 2 ? 'inprogress' : 'done' %>
          </td>
          <td>
            <%= top_order.employee_name if top_order.employee_id.present? %>
          </td>
          <td><%= time_ago_in_words top_order.created_at %></td>
          <td><%= time_ago_in_words top_order.updated_at %></td>
        </tr>
      <% end %>
    <% else %>
      <tr class="text-center">
        <td colspan="5"><%= t "action_message.you_dont_have_top_order" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
