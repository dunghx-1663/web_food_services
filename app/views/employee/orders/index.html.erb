<div class="panel-heading">
  <span class="glyphicon glyphicon-list"></span>Danh sách đơn hàng
</div>
<br>
<div class="container">
  <table id="delivery_month" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
    <tr>
      <th>STT</th>
      <th><%=t ".customer" %></th>
      <th><%=t ".employee" %></th>
      <th><%=t ".address" %></th>
      <th><%=t ".total_money" %></th>
      <th><%=t ".status" %></th>
      <th><%=t ".created_at" %></th>
    </tr>
    </thead>
    <tbody>
    <% @all_orders.each_with_index {|item,index | %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= item.customer.name %></td>
        <td><%= item.employee.name if item.employee %></td>
        <td><%= item.address %></td>
        <td><%= item.total_money %></td>
        <td><%= item.status == 1 ? 'new' : item.status == 2 ? 'inprogress' : 'done' %></td>
        <td><%= item.created_at.strftime Settings.format_time_with_hour %></td>
      </tr>
    <% } %>
    </tbody>
  </table>
</div>
<div class="container">
  <button class="btn btn-default btn-secondary"><i class="fa fa-file-excel-o"></i><%= link_to t(".download"), admin_orders_url(format: "xls") %></button>
</div>
<script>
  $(document).ready(function() {
    $('#delivery_month').DataTable();
    $('#delivery_month_length').hide();
    $('#delivery_month_info').hide();
  } );
</script>